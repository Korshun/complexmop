script mop_log_join(int player, int team) clientside
{
	switch(team)
	{
	case PLAYER_MARINE: Log(n:player+1, s:" becomes a Doom Guy."); break;
	case PLAYER_MOP: Log(n:player+1, s:" becomes a Puppet Master."); break;
	}
}

